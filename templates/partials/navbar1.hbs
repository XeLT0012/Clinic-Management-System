        nav ul {
            padding: 0;
            margin: 0;
            float: right;
            margin-right: 30px;
        }

        nav ul li {
            background: #2c3e50;
            position: relative;
            list-style: none;
            display: inline-block;
        }

        nav ul li a {
            display: block;
            padding: 0 20px;
            color: white;
            text-decoration: none;
            line-height: 60px;
            font-size: 12px;
        }

        nav ul li a:hover {
            background: #243342;
        }

        nav ul ul {
            position: absolute;
            top: 60px;
            display: none;
        }

        nav ul li:hover>ul {
            display: block;
        }

        nav ul ul li {
            width: 150px;
            float: none;
            display: list-item;
            position: relative;
        }
    </style>

